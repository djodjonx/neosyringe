{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "baseUrl": ".",
    "paths": {
      "@djodjonx/neosyringe": ["./packages/neosyringe/src"],
      "@djodjonx/neosyringe-core/analyzer": ["./packages/core/src/analyzer/index.ts"],
      "@djodjonx/neosyringe-core/generator": ["./packages/core/src/generator/index.ts"],
      "@djodjonx/neosyringe-core": ["./packages/core/src"],
      "@djodjonx/neosyringe-plugin": ["./packages/unplugin/src"],
      "@djodjonx/neosyringe-lsp": ["./packages/lsp/src"],
      "@djodjonx/neosyringe-cli": ["./packages/cli/src"]
    }
  },
  "include": ["packages/*/src", "packages/*/tests", "tests"],
  "exclude": ["docs", "examples", "node_modules", "dist"]
}